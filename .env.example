PROJECT_NAME="Agri Bantay Presyo"

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=bantay_presyo
# Or use a full DATABASE_URL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/bantay_presyo

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Authentication (Optional)
# If set, API write endpoints will require this key in the X-API-Key header
# If not set, authentication is disabled (development mode)
# API_KEY=your_secret_api_key_here
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Default Settings
DEFAULT_MARKET_NAME=NCR Central Market

# Cache TTL (in seconds)
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600

# CORS Origins (comma-separated JSON list of allowed origins)
BACKEND_CORS_ORIGINS=["http://localhost:8000","http://localhost:3000"]
